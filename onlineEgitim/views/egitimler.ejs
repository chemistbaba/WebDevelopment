<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Eğitimler</title>
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <%- include("header") -%>
    <div class="container mt-5 text-center">
      <div class="row d-flex justify-content-between">
        <% for (let i=0; i<tumEgitimler.length; i++ ) { %>

        <a href="/egitim/<%=tumEgitimler[i].egitimAdi %>/<%=tumEgitimler[i].index%>">
        <div class="col-2">
          <div class="card" style="width: 18rem;">
            <img src="<%= tumEgitimler[i].fotoLink %>" class="card-img-top" alt="...">
            <div class="card-body text-center">
              <h6 class="card-title"><%= tumEgitimler[i].egitimAdi %></h6>
              <a href="/kayit" class="btn btn-danger btn-sm">Kayıt ol</a>
            </div>
          </div>
        </div> </a>
      <% } %>
      </div>
      <div class="row d-flex justify-content-between my-5 ">
      <% for (let i=(tumEgitimler.length)-1; i>=0; i-- ) { %>

      <a href="/egitim/<%=tumEgitimler[i].egitimAdi %>/<%=tumEgitimler[i].index%>">
      <div class="col-2">
        <div class="card" style="width: 18rem;">
          <img src="<%= tumEgitimler[i].fotoLink %>" class="card-img-top" alt="...">
          <div class="card-body text-center">
            <h6 class="card-title"><%= tumEgitimler[i].egitimAdi %></h6>
            <a href="/kayit" class="btn btn-danger btn-sm">Kayıt ol</a>
          </div>
        </div>
        </div>
       </a>
    <% } %>
      </div>

        </div>
<%- include("footer") -%>
  </body>
</html>
